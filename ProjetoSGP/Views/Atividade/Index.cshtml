@model IEnumerable<ProjetoSGP.Models.Atividade>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Projeto.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Recurso.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataTermino)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duracao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {


        string txt = "";
        if (item.DataInicio > DateTime.Now && item.DataTermino > DateTime.Now)
        {
            txt = "background: yellow";
        }
        else if (item.DataInicio < DateTime.Now && item.DataTermino > DateTime.Now)
        {
            txt = "background: green";
        }
        else if (item.DataTermino < DateTime.Now)
        {
            txt = "background: red";
        }


        <tr style="@txt">
            <td>
                @Html.DisplayFor(modelItem => item.Projeto.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recurso.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataTermino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duracao)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdAtividade }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdAtividade }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdAtividade })
            </td>
        </tr>

    }

</table>


