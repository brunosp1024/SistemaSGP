@model IEnumerable<ProjetoSGP.Models.Recurso>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefone)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdRecurso }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Details", "Details", new { id=item.IdRecurso }, new { @class = "btn btn-info" })
            @Html.ActionLink("Delete", "Delete", new { id=item.IdRecurso }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
